{{>header}}


<div class="container-fluid container--index">
	
	<div class="container">
		<div class="row">
			<div class="col-12 quote-block" id="quoteBlock"></div>
		</div>
		<div class="row">
			{{#each instruction_points}}
				<section class="container--post-block {{{display_options}}}">
					<div class="post-container">
						<div class="row">
							<div class="col-primary {{{display_options}}}">
									<h1>{{header}}</h1>
									<h3><i class="fas fa-feather-alt"></i> {{tagline}}</h3>
									<h4><i class="far fa-clock"></i> {{published_on}}</h4>
							</div>
							<div class="col-secondary {{{display_options}}}" style="background-image: url({{{background_image}}})">

							</div>
						</div>
					</div>
				</section>
			{{/each}}
		</div>
		
	</div>
</div>


{{>footer}}